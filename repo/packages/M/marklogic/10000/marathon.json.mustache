{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "disk": {{service.disk}},
  "labels": {
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_NAME": "{{service.name}}"
  },

  "marklogic": {
    "username": "{{service.marklogic.username}}",
    "password": "{{service.marklogic.password}}",
    "auth_mode": "{{service.marklogic.auth_mode}}",
    "realm": "{{service.marklogic.realm}}",
    "hdfs_config_url": "{{service.marklogic.hdfs_config_url}}"
  },

  "container": {
    "portMappings": [
      {
        "containerPort": 7997,
        "hostPort": 0,
        "protocol": "tcp"
      },
      {
        "containerPort": 7998,
        "hostPort": 0,
        "protocol": "tcp"
      },
      {
        "containerPort": 7999,
        "hostPort": 0,
        "protocol": "tcp"
      },
      {
        "containerPort": 8000,
        "hostPort": 0,
        "protocol": "tcp"
      },
      {
        "containerPort": 8001,
        "hostPort": 0,
        "labels": {
          "VIP_0": "/{{service.name}}:8001"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 8002,
        "hostPort": 0,
        "protocol": "tcp"
      }
    ],
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "{{service.volumes_containerPath}}",
        "hostPath": "{{service.volumes_hostPath}}",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "{{resource.assets.container.docker.mlogic}}",
      "forcePullImage": true
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [
    {
      "portIndex": 0,
      "protocol": "MESOS_HTTP",
      "path": "/"
    }
  ]
}
