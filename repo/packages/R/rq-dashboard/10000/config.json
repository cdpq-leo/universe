{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "Name of this service instance.",
          "type": "string",
          "default": "rq-dashboard"
        },
        "constraints": {
          "description": "Marathon constraints for the framework/scheduler instance. Valid constraint operators are one of UNIQUE, CLUSTER, GROUP_BY, LIKE, UNLIKE.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string"
              },
              "operator": {
                "type": "string",
                "enum": ["UNIQUE", "CLUSTER", "GROUP_BY", "LIKE", "UNLIKE"]
              },
              "value": {
                "type": "string"
              },
              "last": {
                "type": "boolean",
                "default": false
              }
            }
          },
          "default": []
        }
      }
    },
    "rq": {
      "type": "object",
      "description": "RQ Dashboard instance configuration properties",
      "properties": {
        "cpus": {
          "description": "CPU shares to allocate to the RQ Dashboard instance.",
          "type": "number",
          "default": 0.5,
          "minimum": 0.5
        },
        "mem": {
          "description": "Memory to allocate to the RQ Dashboard instance.",
          "type": "number",
          "default": 512,
          "minimum": 512
        },
        "disk": {
          "description": "Disk (MB) to allocate to the RQ Dashboard instance.",
          "type": "number",
          "default": 1000,
          "minimum": 1000
        },
        "redis_host": {
          "description": "CPU shares to allocate to the RQ Dashboard instance.",
          "type": "string",
          "default": ""
        },
        "redis_port": {
          "description": "CPU shares to allocate to the RQ Dashboard instance.",
          "type": "number",
          "default": 6379
        },
        "url_prefix": {
          "description": "Url prefix for reverse proxy.",
          "type": "string",
          "default": "/"
        }
      },
      "required": [
        "cpus",
        "mem",
        "disk",
        "redis_host",
        "redis_port"
      ]
    }
  }
}
