{
 "id": "{{service.name}}",
 "instances": 1,
 {{#service.constraints}}
 "constraints": [
   {{#.}}
     [
       "{{attribute}}"
      ,"{{operator}}"
      {{#value}},"{{value}}"{{/value}}
     ]{{^last}},{{/last}}
   {{/.}}
 ],
 {{/service.constraints}}
 "cpus": {{redis.cpus}},
 "mem": {{redis.mem}},
 "disk": {{redis.disk}},
 "container": {
   "type": "DOCKER",
   "volumes": [
      {
        "containerPath": "/data",
        "hostPath": "{{redis.hostpath}}",
        "mode": "RW"
      }
   ],
   "docker": {
     "image": "{{resource.assets.container.docker.redis}}",
     "network": "BRIDGE",
     "portMappings": [
       {
       "containerPort": 6379,
       "protocol": "tcp",
       "labels": {
            "VIP_0": "/{{service.name}}:6379"
          }
       }
     ]
   }
 },
 "healthChecks": [
   {
   "protocol": "TCP",
   "gracePeriodSeconds": 60,
   "intervalSeconds": 5,
   "portIndex": 0,
   "timeoutSeconds": 5,
   "maxConsecutiveFailures": 3
   }
 ]
}
