{
  "id": "/{{service.name}}",
  "mem": {{service.mem}},
  "cpus": {{service.cpus}},
  "disk": {{service.disk}},
  "labels": {
    "DCOS_SERVICE_PORT_INDEX": "0",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_NAME": "{{service.name}}"
  },
  "env": {
    "REDIS_HOST": "{{rediscommander.redis_host}}",
    "REDIS_PORT": "{{rediscommander.redis_port}}"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{resource.assets.container.docker.rediscommanderimage}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    },
    "portMappings": [
      {
        "containerPort": 0,
        "hostPort": 0,
        "protocol": "tcp"
      }
    ]
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "portIndex": 0,
      "timeoutSeconds": 5,
      "delaySeconds": 15,
      "protocol": "HTTP",
      "path": "/",
      "ipProtocol": "IPv4"
    }
  ]
}
