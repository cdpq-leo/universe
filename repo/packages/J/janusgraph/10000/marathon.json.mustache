{
  "id": "/{{service.name}}",
  "backoffFactor": 1.15,
  "backoffSeconds": 1,
  "env": {
    "CASSANDRA_HOSTNAMES": "{{service.cassandra_hostnames}}"
  },
  "container": {
    "portMappings": [
      {
        "containerPort": 8182,
        "hostPort": 0,
        "labels": {
          "VIP_0": "/{{service.name}}:8182"
        },
        "protocol": "tcp",
        "servicePort": 10111
      }
    ],
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{resource.assets.container.docker.janusgraphimage}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    }
  },
  "cpus": {{service.cpus}},
  "disk": {{service.disk}},
  "instances": 1,
  "maxLaunchDelaySeconds": 3600,
  "mem": {{service.mem}},
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [],
  {{#service.constraints}}
  "constraints": [
    {{#.}}
      [
        "{{attribute}}"
       ,"{{operator}}"
       {{#value}},"{{value}}"{{/value}}
      ]{{^last}},{{/last}}
    {{/.}}
  ],
  {{/service.constraints}}
  "fetch": []
}
