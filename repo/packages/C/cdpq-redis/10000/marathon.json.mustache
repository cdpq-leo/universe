{
 "id": "{{service.name}}",
 "instances": 1,
 "cpus": {{service.cpus}},
 "mem": {{service.mem}},
 "disk": {{service.disk}},
 "container": {
   "type": "DOCKER",
   "volumes": [
      {
        "containerPath": "/data",
        "hostPath": "{{volumes.host_path}}",
        "mode": "RW"
      }
   ],
   "docker": {
     "image": "{{resource.assets.container.docker.image}}",
     "network": "BRIDGE",
     "portMappings": [
       {
       "containerPort": 6379,
       "protocol": "tcp",
       "labels": {
            "VIP_0": "/{{service.name}}:6379"
          }
       }
     ]
   }
 },
 "healthChecks": [
   {
   "protocol": "TCP",
   "gracePeriodSeconds": 60,
   "intervalSeconds": 5,
   "portIndex": 0,
   "timeoutSeconds": 5,
   "maxConsecutiveFailures": 3
   }
 ]
}
