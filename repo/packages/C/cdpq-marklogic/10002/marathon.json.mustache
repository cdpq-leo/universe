{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "disk": {{service.disk}},
  "container": {
    "portMappings": [
      {
        "containerPort": 7997,
        "hostPort": 0,
        "labels": {
          "VIP_0": "/{{service.name}}:7997"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 7998,
        "hostPort": 0,
        "labels": {
          "VIP_1": "/{{service.name}}:7998"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 7999,
        "hostPort": 0,
        "labels": {
          "VIP_2": "/{{service.name}}:7999"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 8000,
        "hostPort": 0,
        "labels": {
          "VIP_3": "/{{service.name}}:8000"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 8001,
        "hostPort": 0,
        "labels": {
          "VIP_4": "/{{service.name}}:8001"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 8002,
        "hostPort": 0,
        "labels": {
          "VIP_5": "/{{service.name}}:8002"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 8003,
        "hostPort": 0,
        "labels": {
          "VIP_6": "/{{service.name}}:8003"
        },
        "protocol": "tcp"
      },
      {
        "containerPort": 8004,
        "hostPort": 0,
        "labels": {
          "VIP_7": "/{{service.name}}:8004"
        },
        "protocol": "tcp"
      }
    ],
    "type": "DOCKER",
    "volumes": [
        {
            "containerPath": "{{volumes.data_host_volume.container_path}}",
            "hostPath": "{{volumes.data_host_volume.host_path}}",
            "mode": "RW"
        },
        {
            "containerPath": "{{volumes.backup_host_volume.container_path}}",
            "hostPath": "{{volumes.backup_host_volume.host_path}}",
            "mode": "RW"
        },
        {
            "containerPath": "{{volumes.external_host_volume.container_path}}",
            "hostPath": "{{volumes.external_host_volume.host_path}}",
            "mode": "RW"
        }
    ],
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": true
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [
    {
      "portIndex": 0,
      "protocol": "MESOS_HTTP",
      "path": "/"
    }
  ],
  "labels": {
    "HAPROXY_3_GROUP": "external",
    "HAPROXY_3_VHOST": "{{networking.marathon_lb.vhost}}",
    "HAPROXY_3_BACKEND_HEAD": "backend {backend}\n  balance {balance}\n  mode {mode}\n  timeout server 30m\n  timeout client 30m\n",
    "HAPROXY_3_STICKY": "true",
    "HAPROXY_4_GROUP": "external",
    "HAPROXY_4_VHOST": "{{networking.marathon_lb.vhost}}",
    "HAPROXY_4_STICKY": "true",
    "HAPROXY_5_GROUP": "external",
    "HAPROXY_5_VHOST": "{{networking.marathon_lb.vhost}}",
    "HAPROXY_5_STICKY": "true"
  },
  "env": {
    {{#placement.region}}
      "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    "MARKLOGIC_USR": "{{environment.marklogic.username}}",
    "MARKLOGIC_PWD": {
      "secret": "marklogicpassword"
    },
    "MARKLOGIC_AUTH_MODE": "{{environment.marklogic.auth_mode}}",
    "MARKLOGIC_SEC_REALM": "{{environment.marklogic.realm}}",
    "HDFS_CONFIG_URL": "{{environment.hdfs.config_url}}"
  },
  "secrets": {
    "marklogicpassword": {
      "source": "{{environment.marklogic.password}}"
    }
  }
}
