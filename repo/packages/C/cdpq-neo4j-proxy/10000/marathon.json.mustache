{
  "id":"{{service.name}}",
  "cpus":{{service.cpus}},
  "mem":{{service.mem}},
  "instances":{{service.instances}},
  "container":{
    "type":"DOCKER",
    "docker":{
      "image":"{{resource.assets.container.docker.image}}",
      "forcePullImage":true,
      "network":"BRIDGE",
      "portMappings":[
        {
          "hostPort":7474,
          "containerPort":7474,
          "protocol":"tcp"
        }
      ]
    }
  },
  "env":{
    {{#placement.region}}
      "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    "DCOS_NEO4J_USER":{
      "secret": "neo4juser"
    },
    "DCOS_NEO4J_PASS": {
      "secret": "neo4jpassword"
    }
  },
  "labels": {
     "DCOS_SERVICE_NAME": "{{service.name}}",
     "DCOS_SERVICE_SCHEME": "http",
     "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "secrets": {
     "neo4juser": {
      "source": "{{environment.auth_username}}"
    },
    "neo4jpassword": {
      "source": "{{environment.auth_password}}"
    }
  },
  "healthChecks":[
    {
      "protocol":"HTTP",
      "path":"/",
      "port":7474,
      "timeoutSeconds":10,
      "gracePeriodSeconds":240,
      "intervalSeconds":10,
      "maxConsecutiveFailures":10
    }
  ],
  "acceptedResourceRoles":[
    "slave_public"
  ]
}
