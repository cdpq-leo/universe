{
  "id": "/{{service.name}}",
  "instances": {{service.instances}},
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "disk": {{service.disk}},
  "backoffFactor": {{service.back_off_factor}},
  "backoffSeconds": {{service.back_off_seconds}},
  "cmd": "{{service.cmd}}",
  "container": {
    "portMappings": [
      {
        "containerPort": {{networking.container_port}},
        "hostPort": {{networking.host_port}},
        "protocol": "tcp",
        "servicePort": {{networking.service_port}}
      }
    ],
    "type": "DOCKER",
    "volumes": [
      {{#volumes.persist}}
      {{#volumes.external_volume.enable}}
      {
        "external": {
            "name": "{{volumes.external_volume.external.name}}",
            "provider": "{{volumes.external_volume.external.provider}}",
            "options": {
               "dvdi/driver": "{{volumes.external_volume.external.options.dvdi_driver}}"
            }
         },
         "mode": "RW",
         "containerPath": "{{volumes.external_volume.container_path}}"
      }
      {{/volumes.external_volume.enable}}
      {{^volumes.external_volume.enable}}
      {
        "containerPath": "{{volumes.local_volume.container_path}}",
        "hostPath": "{{volumes.local_volume.host_path}}",
        "mode": "RW"
      }
      {{/volumes.external_volume.enable}}
      {{/volumes.persist}}
    ],
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    }
  },
  "env": {
    "BRAT_USERNAME": "{{environment.username}}",
    "BRAT_PASSWORD": "{{environment.password}}",
    "BRAT_EMAIL": "{{environment.email}}"
  },
  "labels": {
    "DCOS_SERVICE_PORT_INDEX": "0",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "true",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_VHOST": "{{environment.HAPROXY_0_VHOST}}",
    "HAPROXY_0_PATH": "/brat",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http"
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": {{health_checks.TCP_protocol.advanced_health_checking_settings.grace_periods}},
      "intervalSeconds": {{health_checks.TCP_protocol.advanced_health_checking_settings.intervals}},
      "timeoutSeconds": {{health_checks.TCP_protocol.advanced_health_checking_settings.timeout}},
      "maxConsecutiveFailures": {{health_checks.TCP_protocol.advanced_health_checking_settings.max_failures}},
      "portIndex": {{health_checks.TCP_protocol.port_index}},
      "protocol": "TCP"
    }
  ],
  "maxLaunchDelaySeconds": {{service.max_launch_delay_seconds}},
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "requirePorts": false,
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 1
  }
}
