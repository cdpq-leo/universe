{
   "id": "{{service.name}}",
   "cpus": {{service.cpus}},
   "mem": {{service.mem}},
   "disk":{{service.disk}},
   "container":{
      "portMappings":[
         {
            "containerPort":{{networking.container_port}},
            "hostPort":{{networking.host_port}},
            "protocol":"tcp"
         }
      ],
      "type":"DOCKER",
      "volumes":[],
      "docker":{
         "image":"{{resource.assets.container.docker.image}}",
         "forcePullImage":true
      }
   },
   "networks":[
      {
         "mode":"container/bridge"
      }
   ],
   "healthChecks":[
      {
         "portIndex":0,
         "protocol":"MESOS_HTTP",
         "path":"{{health_checks.MESOS_HTTP.path}}"
      }
   ],
   "env":{
      "SMART_SEARCH_URL":"{{environment.SMART_SEARCH_URL}}"
   },
   "labels":{
      "DCOS_SERVICE_PORT_INDEX":"0",
      "DCOS_SERVICE_SCHEME":"http",
      "DCOS_SERVICE_NAME":"{{service.name}}"
   },
  "fetch": [
    {
      "uri": "{{service.artifact_URI.uri}}",
      "extract": true,
      "executable": false,
      "cache": false
    }
  ]
}
