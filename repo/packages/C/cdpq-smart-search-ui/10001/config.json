{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS smart-search-ui service specifications",
      "properties": {
        "name": {
          "description": "Name of SmartSearchUI instances as seen in DC/OS.",
          "type": "string",
          "default": "smart-search-ui"
        },
        "cpus": {
          "description": "Number of logical cores to allocate to each service instance.",
          "type": "number",
          "default": 0.3
        },
        "mem": {
          "description": "Memory in Mb to allocate to each service instance.",
          "type": "number",
          "default": 2048
        },
        "disk": {
          "description": "Number of disks to allocate to each service instance.",
          "type": "number",
          "default": 0
        }
      }
    },
    "networking": {
      "type": "object",
      "description": "Configure the networking for your service.",
      "properties": {
        "container_port": {
          "description": "Container port number",
          "type": "number",
          "default": 8080
        },
        "host_port": {
          "description": "host port number",
          "type": "number",
          "default": 0
        }
      }
    },
    "health_checks": {
      "type": "object",
      "description": "Health checks may be specified per application to be run against the application's instances.",
      "properties": {
        "MESOS_HTTP": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string",
              "description": "Enter a path that is reachable in your service and where you expect a response code between 200 and 399.",
              "default": "/"
            }
          }
        }
      }
    },
    "environment": {
      "type": "object",
      "description": "environment variables",
      "properties": {
        "SMART_SEARCH_URL": {
          "description": "Smart search service url.",
          "type": "string",
          "default": "http://smart-search-service.marathon.l4lb.thisdcos.directory:8080/smart-search-service/api/search/smart"
        }
      }
    }
  }
}