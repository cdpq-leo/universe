{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS coreapi-translate service specifications",
      "properties": {
        "name": {
          "description": "Name of CoreApiTranslate instances as seen in DC/OS.",
          "type": "string",
          "default": "ui-coreapi-translate"
        },
        "cpus": {
          "description": "Number of logical cores to allocate to each service instance.",
          "type": "number",
          "default": 0.2
        },
        "mem": {
          "description":  "Memory in Mb to allocate to each service instance.",
          "type": "number",
          "default": 256
        },
        "health_url": {
          "description": "Url for health checks",
          "type": "string",
          "default": "/service/ui-coreapi-translate/api/health"
        },
        "container_port": {
          "description": "Container port",
          "type": "number",
          "default": 8080
        },
        "data_volume": {
          "type": "object",
          "description": "coreapi-search data volume config",
          "properties": {
            "container_path": {
              "description": "Container path",
              "type": "string",
              "default": "/var/opt/data/google"
            },
            "host_path": {
              "description": "Host path",
              "type": "string",
              "default": "/mnt/azurefileshare/data/google"
            }
          }
        },
        "env" : {
          "type": "object",
          "description": "environment variables",
          "properties": {
            "HTTP_HOSTNAME" : {
              "description": "Hostname",
              "type": "string",
              "default": "0.0.0.0"
            },
            "HTTP_PORT" : {
              "description": "HTTP_PORT",
              "type": "string",
              "default": "8080"
            },
            "SERVICE_PREFIX" : {
              "description": "service prefix url",
              "type": "string",
              "default": "/service/ui-coreapi-translate"
            },
            "GOOGLE_APPLICATION_CREDENTIALS" : {
              "description": "service prefix url",
              "type": "string",
              "default": "/var/opt/data/google/loyal-rookery-222020-6a69b33e81bf.json"
            }
          }
        }
      }
    }
  }
}