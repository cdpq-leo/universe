{
  "id": "/{{service.name}}",
  "cpus": {{service.cpus}},
  "disk": {{service.disk}},
  "mem": {{service.mem}},
  "container": {
    "portMappings": [
      {
        "containerPort": 8182,
        "hostPort": 0,
        "labels": {
          "VIP_0": "/{{service.name}}:8182"
        },
        "protocol": "tcp"
      }
    ],
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": true
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [],
  "env": {
    {{#placement.region}}
      "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    "CASSANDRA_HOSTNAMES": "{{environment.cassandra_hostnames}}",
    "ELASTIC_HOSTNAME": "{{environment.elastic_hostname}}",
    "KEYSPACE": "{{environment.keyspace}}",
    "READ_ONLY": "{{environment.read_only}}"
  }
}
