{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "instances": {{service.instances}},
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
    "forcePullImage": false,
    "image": "{{resource.assets.container.docker.image}}",
    "parameters": [],
    "privileged": false
    },
    "portMappings": [
      {
        {{#networking.service_endpoints.load_balance_port}}
        "labels": {
            "VIP_0": "/{{service.name}}:{{networking.service_endpoints.load_balance_port}}"
        },
        {{/networking.service_endpoints.load_balance_port}}
        "containerPort": {{networking.service_endpoints.container_port}},
        "hostPort": {{networking.service_endpoints.host_port}},
        "protocol": "{{networking.service_endpoints.protocol}}"
      }
    ],
    "volumes": [
    	{{^volumes.volume_data.external_volume_name}}
    	{
    	  "containerPath": "data",
    	  "mode": "RW",
    	  "persistent": {
    		"type": "{{volumes.volume_data.type}}",
    		"profileName": "{{volumes.volume_data.profile}}",
    		"size": "{{volumes.volume_data.size}}"
    		"constraints": []
    	  }
    	},
    	{
    	  "containerPath": "{{volumes.volume_data.container_path}}/data",
    	  "hostPath": "data",
    	  "mode": "RW"
    	}
    	{{/volumes.volume_data.external_volume_name}}
    	{{#volumes.volume_data.external_volume_name}}
        {
            "containerPath": "{{volumes.volume_data.container_path}}/data",
            "external": {
              "name": "{{volumes.volume_data.external_volume_name}}",
              "provider": "dvdi",
              "options": { "dvdi/driver": "rexray" }
            },
            "mode": "RW"
        }
    	{{/volumes.volume_data.external_volume_name}},
    	{{^volumes.volume_log.external_volume_name}}
    	{
    	  "containerPath": "log",
    	  "mode": "RW",
    	  "persistent": {
    		"type": "{{volumes.volume_log.type}}",
    		"profileName": "{{volumes.volume_log.profile}}",
    		"size": "{{volumes.volume_log.size}}"
    		"constraints": []
    	  }
    	},
    	{
    	  "containerPath": "{{volumes.volume_log.container_path}}/log",
    	  "hostPath": "log",
    	  "mode": "RW"
    	}
    	{{/volumes.volume_log.external_volume_name}}
    	{{#volumes.volume_log.external_volume_name}}
        {
            "containerPath": "{{volumes.volume_log.container_path}}/log",
            "external": {
              "name": "{{volumes.volume_log.external_volume_name}}",
              "provider": "dvdi",
              "options": { "dvdi/driver": "rexray" }
            },
            "mode": "RW"
        }
    	{{/volumes.volume_log.external_volume_name}},
    	{{^volumes.volume_tempdb.external_volume_name}}
    	{
    	  "containerPath": "tempdb",
    	  "mode": "RW",
    	  "persistent": {
    		"type": "{{volumes.volume_tempdb.type}}",
    		"profileName": "{{volumes.volume_tempdb.profile}}",
    		"size": "{{volumes.volume_tempdb.size}}"
    		"constraints": []
    	  }
    	},
    	{
    	  "containerPath": "{{volumes.volume_tempdb.container_path}}/tempdb",
    	  "hostPath": "tempdb",
    	  "mode": "RW"
    	}
    	{{/volumes.volume_tempdb.external_volume_name}}
    	{{#volumes.volume_tempdb.external_volume_name}}
        {
            "containerPath": "{{volumes.volume_tempdb.container_path}}/tempdb",
            "external": {
              "name": "{{volumes.volume_tempdb.external_volume_name}}",
              "provider": "dvdi",
              "options": { "dvdi/driver": "rexray" }
            },
            "mode": "RW"
        }
    	{{/volumes.volume_tempdb.external_volume_name}},

    	{{^volumes.volume_backup.external_volume_name}}
    	{
    	  "containerPath": "backup",
    	  "mode": "RW",
    	  "persistent": {
    		"type": "{{volumes.volume_backup.type}}",
    		"profileName": "{{volumes.volume_backup.profile}}",
    		"size": "{{volumes.volume_backup.size}}"
    		"constraints": []
    	  }
    	},
    	{
    	  "containerPath": "{{volumes.volume_backup.container_path}}/backup",
    	  "hostPath": "backup",
    	  "mode": "RW"
    	}
    	{{/volumes.volume_backup.external_volume_name}}
    	{{#volumes.volume_backup.external_volume_name}}
        {
            "containerPath": "{{volumes.volume_backup.container_path}}/backup",
            "external": {
              "name": "{{volumes.volume_backup.external_volume_name}}",
              "provider": "dvdi",
              "options": { "dvdi/driver": "rexray" }
            },
            "mode": "RW"
        }
    	{{/volumes.volume_backup.external_volume_name}}
     ]
  },
  "env": {
    {{#placement.region}}
      "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    "ACCEPT_EULA": "Y",
    "SA_PASSWORD": {"secret": "sapassword"},
    "MSSQL_PID": "{{environment.MSSQL_PID}}",
    "MSSQL_TCP_PORT": "{{networking.container_port}}",
    "MSSQL_LCID": "{{environment.MSSQL_LCID}}",
    "MSSQL_COLLATION": "{{environment.MSSQL_COLLATION}}",
    "MSSQL_AGENT_ENABLED": "{{environment.MSSQL_AGENT_ENABLED}}",
    "MSSQL_DUMP_DIR": "{{environment.MSSQL_DUMP_DIR}}",
    "MSSQL_DATA_DIR": "{{volumes.volume_data.container_path}}/data",
    "MSSQL_LOG_DIR": "{{volumes.volume_log.container_path}}/log",
    "MSSQL_BACKUP_DIR": "{{volumes.volume_backup.container_path}}/backup",
    "MSSQL_TEMPDB_DIR": "{{volumes.volume_tempdb.container_path}}/tempdb"
  },
  "secrets": {
    "sapassword": {
      "source": "{{environment.SA_PASSWORD_SECRET}}"
    }
  },
  "constraints": [["hostname", "UNIQUE"]],
  "healthChecks": [{
    "protocol": "TCP",
    "portIndex": 0,
    "gracePeriodSeconds": 300,
    "intervalSeconds": 60,
    "timeoutSeconds": 20,
    "maxConsecutiveFailures": 3
  }],
  "labels": {
    {{#networking.marathon_lb_proxy.enabled}}
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "true",
    "HAPROXY_0_VHOST": "{{networking.marathon_lb_proxy.vhost}}",
    "HAPROXY_0_PATH": "{{networking.marathon_lb_proxy.path}}",
     {{/networking.marathon_lb_proxy.enabled}}
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_WEB_PATH": "/auth",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
