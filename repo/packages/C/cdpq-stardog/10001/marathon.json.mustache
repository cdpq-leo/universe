{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "disk": {{service.disk}},
  "instances": {{service.instances}},
  "acceptedResourceRoles": [
    "*"
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "forcePullImage": true,
      "image": "{{resource.assets.container.docker.image}}",
      "parameters": [],
      "privileged": false
    },
    "volumes": [
      {{#volumes.persist}}
      {{#volumes.external_volume.enable}}
      {
        "external": {
            "name": "{{volumes.external_volume.external.name}}",
            "provider": "{{volumes.external_volume.external.provider}}",
            "options": {
               "dvdi/driver": "{{volumes.external_volume.external.options.dvdi_driver}}"
            }
         },
         "mode": "RW",
         "containerPath": "{{volumes.external_volume.container_path}}"
      }
      {{/volumes.external_volume.enable}}
      {{^volumes.external_volume.enable}}
      {
        "containerPath": "{{volumes.local_volume.container_path}}",
        "hostPath": "{{volumes.local_volume.host_path}}",
        "mode": "RW"
      }
      {{/volumes.external_volume.enable}}
      {{/volumes.persist}}
    ],
    "portMappings": [
      {
        "containerPort": {{networking.container_port}},
        "hostPort": 0,
        "labels": {
          "VIP_0": "{{networking.VIP_0}}:{{networking.container_port}}"
        },
        "name": "{{service.name}}",
        "protocol": "tcp",
        "servicePort": {{networking.service_port}}
      }
    ]
  },
  "env": {
    "DEPLOYMENT_TYPE": "{{environment.DEPLOYMENT_TYPE}}",
    "DEPLOYMENT_NODE_TYPE": "{{environment.DEPLOYMENT_NODE_TYPE}}"
  },
  "labels": {
    {{#networking.external_access.enabled}}
    "HAPROXY_0_REDIRECT_TO_HTTPS": "true",
    "HAPROXY_0_BACKEND_HEAD": "backend {backend}\n  balance {balance}\n  mode {mode}\n  timeout server 30m\n  timeout client 30m\n",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_VHOST": "{{networking.external_access.external_public_agent_hostname}}",
    {{/networking.external_access.enabled}}
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_NAME": "data-services/{{service.name}}",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "portDefinitions": [],
  "fetch": [
    {
      "uri": "{{service.artifact_URI.uri}}",
      "extract": true,
      "executable": false,
      "cache": false
    }
  ]
}
