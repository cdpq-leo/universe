{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS PypiServer service specifications",
      "properties": {
        "name": {
          "description": "Name of PypiServer instances as seen in DC/OS.",
          "type": "string",
          "default": "pypiserver"
        },
        "cpus": {
          "description": "Number of logical cores to allocate to each service instance.",
          "type": "number",
          "default": 1
        },
        "disk": {
          "description": "Disk",
          "type": "number",
          "default": 0
        },
        "mem": {
          "description": "Memory in Mb to allocate to each service instance.",
          "type": "number",
          "default": 4096
        }
      }
    },
    "networking": {
      "type": "object",
      "description": "Configure the networking for your service.",
      "properties": {
        "vhost": {
          "description": "Virtual host.",
          "type": "string",
          "default": ""
        },
        "service_port": {
          "description": "Service port number",
          "type": "number",
          "default": 0
        }
      }
    },
    "volumes": {
      "description": "Create a stateful service by configuring a persistent volume. Persistent volumes enable instances to be restarted without data loss.",
      "type": "object",
      "properties": {
        "data_volume": {
          "type": "object",
          "description": "Pypi data volume config",
          "properties": {
            "container_path": {
              "description": "Container path",
              "type": "string",
              "default": "/data"
            },
            "host_path": {
              "description": "Host path",
              "type": "string",
              "default": "/mnt/azurefileshare/data/pypiserver"
            }
          }
        }
      }
    }
  }
}