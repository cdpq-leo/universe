{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "container": {
    "portMappings": [
      {
        {{#networking.service_endpoints.load_balance_port}}   
        "labels": {
            "VIP_0": "/{{service.name}}:{{networking.service_endpoints.load_balance_port}}"
        }, 
        {{/networking.service_endpoints.load_balance_port}}
        "containerPort": {{networking.service_endpoints.container_port}},
        "hostPort": {{networking.service_endpoints.host_port}},
        "protocol": "{{networking.service_endpoints.protocol}}"      
      }
    ],
    "type": "DOCKER",
    "volumes": [
       {{#volumes.volume.local_persistant_volume.container_path}}
      {
         "persistent": {
            "type": {{volumes.volume.local_persistant_volume.type}},
            "size": {{volumes.volume.local_persistant_volume.size_MiB}},
            "constraints": {{volumes.volume.local_persistant_volume.constraints}},
            "profileName": {{volumes.volume.local_persistant_volume.profileName}}
         },
         "mode": "RW",
         "containerPath": "{{volumes.volume.local_persistant_volume.container_path}}",
      }
      {{/volumes.volume.local_persistant_volume.container_path}}
      {{^volumes.volume.local_persistant_volume.container_path}}
      {
        "containerPath": "{{volumes.volume.host_volume.container_path}}",
        "hostPath": "{{volumes.volume.host_volume.host_path}}",
        "mode": "RW"
      }
      {{/volumes.volume.local_persistant_volume.container_path}}
    ],
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "env": {
    {{#placement.region}}
      "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    "HTTP_HOSTNAME": "{{environment.HTTP_HOSTNAME}}",
    "HTTP_PORT": "{{environment.HTTP_PORT}}",
    "SERVICE_PREFIX": "{{environment.SERVICE_PREFIX}}",
    "GOOGLE_APPLICATION_CREDENTIALS": "{{environment.GOOGLE_APPLICATION_CREDENTIALS}}"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "{{health_checks.health_url}}",
      "gracePeriodSeconds": {{health_checks.advanced_health_checking_settings.grace_periods}},
      "intervalSeconds": {{health_checks.advanced_health_checking_settings.intervals}},
      "timeoutSeconds": {{health_checks.advanced_health_checking_settings.timeout}},
      "maxConsecutiveFailures": {{health_checks.advanced_health_checking_settings.max_failures}},
      "delaySeconds": {{health_checks.advanced_health_checking_settings.delay_seconds}}
    }
  ],
  "fetch": 
   [
    {
      "uri": "{{fetch.artifact_URI.uri}}",
      "extract": {{fetch.artifact_URI.extract}},
      "executable": {{fetch.artifact_URI.executable}},
      "cache": {{fetch.artifact_URI.cache}}
    }
   ]
}

