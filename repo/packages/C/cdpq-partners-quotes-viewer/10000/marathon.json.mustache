{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "container": {
    "portMappings": [
      {
        "containerPort": {{networking.container_port}},
        "hostPort": 0,
        "labels": {
            "VIP_0": "/{{service.name}}:5000"
        },
        "protocol": "tcp"
      }
    ],
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "env": {
    {{#placement.region}}
      "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    "HTTP_HOSTNAME": "{{environment.HTTP_HOSTNAME}}",
    "HTTP_PORT": "{{environment.HTTP_PORT}}",
    "ENDPOINT": "{{environment.ENDPOINT}}",
    "ELASTIC_ENDPOINT": "{{environment.ELASTIC_ENDPOINT}}"
  },
  "labels": {
      "DCOS_SERVICE_NAME": "{{service.name}}",
      "DCOS_SERVICE_PORT_INDEX": "0",
      "DCOS_SERVICE_SCHEME": "http"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "{{health_checks.health_url}}",
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "timeoutSeconds": 5
    }
  ]
}

