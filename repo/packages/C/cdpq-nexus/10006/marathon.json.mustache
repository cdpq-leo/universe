{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "acceptedResourceRoles": [ "{{service.resource_role}}" ],

  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": {{networking.host_port}}
        }
      ]
    },
    "volumes": [
      {{#storage.persist}}
      {{^storage.external_volume.enable}}
      {
        "containerPath": "/nexus-data",
        "hostPath": "{{storage.local_volume.host_volume}}",
        "mode": "RW"
      }
      {{/storage.external_volume.enable}}
      {{#storage.external_volume.enable}}
      {
        "containerPath": "/nexus-data",
        "external": {
          "name": "{{storage.external_volume.volume_name}}",
          "provider": "dvdi",
          "options": { "dvdi/driver": "rexray" }
        },
        "mode": "RW"
      }
      {{/storage.external_volume.enable}}
      {{/storage.persist}}
    ]
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "curl --user admin:admin123 --fail --request GET ${HOST}:${PORT0}/service/metrics/ping"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 5
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  },
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    {{#networking.proxy_vhost}}
    "HAPROXY_0_GROUP": "external",
    "HAPROXY_0_STICKY": "true",
    "HAPROXY_0_VHOST": "{{networking.proxy_vhost}}",
    {{/networking.proxy_vhost}}
    "MARATHON_SINGLE_INSTANCE_APP": "true"
  }
  {{#networking.pinned_hostname}},
  "constraints": [
    [
      "hostname", "CLUSTER", "{{networking.pinned_hostname}}"
    ]
  ]
  {{/networking.pinned_hostname}}
}
