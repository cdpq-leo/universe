{
  "id": "/{{service.name}}",
  "backoffFactor": 1.15,
  "backoffSeconds": 1,
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/nifi",
        "hostPath": "nifi",
        "mode": "RW"
      },
      {
        "persistent": {
          "type": "root",
          "size": {{volumes.persistent_volume_size}},
          "constraints": []
        },
        "mode": "RW",
        "containerPath": "nifi"
      },
			{
			  "containerPath": "{{volumes.azurefileshare_path}}",
				"hostPath": "{{volumes.azurefileshare_path}}",
				"mode": "RW"
			}
    ],
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": false,
      "privileged": false,
      "parameters": []
    }
  },
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "disk": {{service.disk}},
  "instances": {{service.instances}},
  "maxLaunchDelaySeconds": {{service.max_launch_delay_seconds}},
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions":[
    {
      {{#networking.service_endpoint_01.load_balance_port}}   
        "labels": {
          "VIP_0": "/{{service.name}}:{{networking.service_endpoint_01.load_balance_port}}"
        }, 
      {{/networking.service_endpoint_01.load_balance_port}}
        "containerPort": {{networking.service_endpoint_01.container_port}},
        "protocol": "{{networking.service_endpoint_01.protocol}}"
    },
    {
      {{#networking.service_endpoint_02.load_balance_port}}   
        "labels": {
          "VIP_1": "/{{service.name}}:{{networking.service_endpoint_02.load_balance_port}}"
        }, 
      {{/networking.service_endpoint_02.load_balance_port}}
        "containerPort": {{networking.service_endpoint_02.container_port}},
        "protocol": "{{networking.service_endpoint_02.protocol}}"
    },
    {
      {{#networking.service_endpoint_03.load_balance_port}}   
        "labels": {
          "VIP_2": "/{{service.name}}:{{networking.service_endpoint_03.load_balance_port}}"
        }, 
      {{/networking.service_endpoint_03.load_balance_port}}
        "containerPort": {{networking.service_endpoint_03.container_port}},
        "protocol": "{{networking.service_endpoint_03.protocol}}"
    }
  ],
  "healthChecks": [],
  "fetch": 
  [  {{#fetch.artifact_URI.uri}}
    {
      "uri": "{{fetch.artifact_URI.uri}}",
      "extract": {{fetch.artifact_URI.extract}},
      "executable": {{fetch.artifact_URI.executable}},
      "cache": {{fetch.artifact_URI.cache}}
    }
      {{/fetch.artifact_URI.uri}}
  ],
  "env": {
    {{#placement.region}}
      "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    "NIFI_CLUSTER_IS_NODE": "{{environment.cluster}}",
    "NIFI_CLUSTER_NODE_PROTOCOL_PORT": "{{environment.cluster_node_protocol_port}}",
    "NIFI_ZK_ROOT_NODE": "{{environment.zookeeper_root}}",
    "NIFI_CLUSTER_NODE_PROTOCOL_THREADS": "{{environment.cluster_node_protocol_threads}}",
    "NIFI_WEB_HTTP_PORT": "{{environment.web_http_port}}",
    "NIFI_ELECTION_MAX_WAIT": "{{environment.election_max_wait}}",
    "NIFI_ZK_CONNECT_STRING": "{{environment.zookeeper}}",
    "NIFI_ELECTION_MAX_CANDIDATES": "{{environment.election_max_candidates}}",
    "NIFI_CLUSTER_NODE_PROTOCOL_MAX_THREADS": "{{environment.cluster_node_protocol_max_threads}}",
    "NIFI_BOOTSTRAP_JVM_MAX": "{{environment.bootstrap_jvm_max}}",
    "NIFI_BOOTSTRAP_JVM_MIN": "{{environment.bootstrap_jvm_min}}",
    "HDFS_CONFIG_URL": "{{environment.hdfs_config_url}}"
  },
  "labels": {
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
