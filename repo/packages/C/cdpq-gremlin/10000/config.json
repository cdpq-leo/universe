{
  "$schema": "http://json-schema.org/schema#",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "Name of this service instance",
          "type": "string",
          "default": "gremlin"
        },
        "cpus":{
          "description": "CPU shares to allocate to the gremlin instance.",
          "type": "number",
          "default": 0.5
        },
        "disk":{
          "description": "Disk (MB) to allocate to the gremlin instance.",
          "type": "number",
          "default": 0
        },
        "mem":{
          "description": "Memory to allocate to each service instance.",
          "type": "number",
          "default": 512
        },
        "docker_image":{
          "description": "URL for the docker image.",
          "type": "string",
          "default": "cdpqleo/gremlin-server:1.0.0-3.3.3"
        }
      }
    }
  }
}
