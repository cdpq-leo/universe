{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "container": {
    "portMappings": [
      {
        "containerPort": {{networking.container_port}},
        "hostPort": 0,
        "labels": {
            "VIP_0": "/{{service.name}}:8080"
        },
        "protocol": "tcp"
      }
    ],
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "env": {
    "ELASTICSEARCH_HOSTNAME": "{{environment.ELASTICSEARCH_HOST}}",
    "GRAKN_MAX_RESULTS": "{{environment.GRAKN_MAX_RESULTS}}",
    "GRAKN_KEYSPACE": "{{environment.GRAKN_KEYSPACE}}",
    "HTTP_HOSTNAME": "{{environment.HTTP_HOSTNAME}}",
    "ELASTICSEARCH_SCHEME": "{{environment.ELASTICSEARCH_SCHEME}}",
    "GRAKN_PORT": "{{environment.GRAKN_PORT}}",
    "GRAKN_ATTRIBUTE": "{{environment.GRAKN_ATTRIBUTE}}",
    "ELASTICSEARCH_PORT": "{{environment.ELASTICSEARCH_PORT}}",
    "GRAKN_HOSTNAME": "{{environment.GRAKN_HOSTNAME}}",
    "HTTP_PORT": "{{environment.HTTP_PORT}}",
    "ES_HOST": "{{environment.ELASTICSEARCH_HOST}}"
  },
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": {{health_checks.HTTP_protocol.port_index}},
      "path": "{{health_checks.HTTP_protocol.path}}",
      "gracePeriodSeconds": {{health_checks.HTTP_protocol.advanced_health_checking_settings.grace_periods}},
      "intervalSeconds": {{health_checks.HTTP_protocol.advanced_health_checking_settings.intervals}},
      "timeoutSeconds": {{health_checks.HTTP_protocol.advanced_health_checking_settings.timeout}},
      "maxConsecutiveFailures": {{health_checks.HTTP_protocol.advanced_health_checking_settings.max_failures}}
    }
  ]
}
