{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "env": {
    "ES_HOST": "{{service.elastic_search_host}}"
  },
  "container": {
    "portMappings": [
      {
        "containerPort": {{service.container_port}},
        "hostPort": 0,
        "labels": {
            "VIP_0": "/{{service.name}}:8080"
        },
        "protocol": "tcp"
      }
    ],
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{resource.assets.container.docker.sss}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "env": {
    "ELASTICSEARCH_HOSTNAME": "{{service.elastic_search_host}}",
    "GRAKN_MAX_RESULTS": "{{service.env.GRAKN_MAX_RESULTS}}",
    "GRAKN_KEYSPACE": "{{service.env.GRAKN_KEYSPACE}}",
    "HTTP_HOSTNAME": "{{service.env.HTTP_HOSTNAME}}",
    "ELASTICSEARCH_SCHEME": "{{service.env.ELASTICSEARCH_SCHEME}}",
    "GRAKN_PORT": "{{service.env.GRAKN_PORT}}",
    "GRAKN_ATTRIBUTE": "{{service.env.GRAKN_ATTRIBUTE}}",
    "ELASTICSEARCH_PORT": "{{service.env.ELASTICSEARCH_PORT}}",
    "GRAKN_HOSTNAME": "{{service.env.GRAKN_HOSTNAME}}",
    "HTTP_PORT": "{{service.env.HTTP_PORT}}"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "{{service.health_url}}",
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "timeoutSeconds": 5
  }]
}
