{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "service":{
            "type":"object",
            "description": "DC/OS service configuration properties",
            "properties":{
                "name" : {
                    "description":"Name of this service instance.",
                    "type":"string",
                    "default":"grafana"
                }
            }
        },
        "grafana": {
            "type": "object",
            "description": "grafana service configuration properties",
            "properties": {
                "cpus": {
                    "description": "CPU shares to allocate to each service instance.",
                    "type": "number",
                    "default": 0.3,
                    "minimum": 0.3
                },
                "mem": {
                    "description":  "Memory to allocate to each service instance.",
                    "type": "number",
                    "default": 512.0,
                    "minimum": 512.0
                },
                "server": {
                    "type": "object",
                    "description": "server configuration properties",
                    "properties": {
                        "domain": {
                            "description": "This setting is only used in as a part of the root_url setting.",
                            "type": "string",
                            "default": ""
                        },
                        "root_url": {
                            "description": "This is the full URL used to access Grafana from a web browser.",
                            "type": "string",
                            "default": ""
                        }
                    }
                },
                "plugins": {
                    "description": "Comma separated Grafana plugins which will be installed via `grafana-cli plugins install grafana-example-app,grafana-clock-panel`. See https://grafana.com/plugins",
                    "type": "string",
                    "default": ""
                },
                "admin_password": {
                    "description": "Admin password.",
                    "type": "string",
                    "default": "admin"
                },
                "auto_assign_org_role": {
                    "description": "The role new users will be assigned for the main organization.",
                    "type": "string",
                    "default": "Viewer"
                },
                "auth_basic_enabled": {
                    "description": "When enabled is true the http api will accept basic authentication.",
                    "type": "string",
                    "default": "true"
                },
                "auth_github": {
                    "type": "object",
                    "description": "github configuration properties",
                    "properties": {
                        "enabled": {
                            "description": "This setting is only used in as a part of the root_url setting.",
                            "type": "string",
                            "default": "false"
                        },
                        "auth_url": {
                            "description": "auth_url",
                            "type": "string",
                            "default": "https://github.com/login/oauth/authorize"
                        },
                        "api_url": {
                            "description": "api_url",
                            "type": "string",
                            "default": "https://api.github.com/user"
                        },
                        "token_url": {
                            "description": "token_url",
                            "type": "string",
                            "default": "https://github.com/login/oauth/access_token"
                        },
                        "client_id": {
                            "description": "client_id",
                            "type": "string",
                            "default": ""
                        },
                        "client_secret": {
                            "description": "client_secret",
                            "type": "string",
                            "default": ""
                        },
                        "scopes": {
                            "description": "scopes",
                            "type": "string",
                            "default": "user:email,read:org"
                        }
                    }
                }
            },
            "required": [
                "cpus",
                "mem"
            ]
        },
        "networking":{
            "type": "object",
            "description": "Grafana networking configuration properties",
            "properties": {
                "external_access": {
                    "type": "object",
                    "description": "Enable access from outside the cluster through Marathon-LB.\nNOTE: this connection is unencrypted.",
                    "properties": {
                        "enable": {
                            "description": "Enable or disable creating a VIP for external access through a public node running Marathon-LB.",
                            "type": "boolean",
                            "default": true
                        },
                        "external_access_port": {
                            "description": "For external access, port number to be used for clear communication in the external Marathon-LB load balancer",
                            "type": "number",
                            "default": 13000
                        },
                        "virtual_host": {
                            "description": "For external access, Virtual Host URL to be used in the external load balancer.",
                            "type": "string",
                            "default": "grafana.example.org"
                        }
                    }
                }
            }
        }
    }
}
