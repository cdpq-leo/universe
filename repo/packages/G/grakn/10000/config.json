{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "Name of this service instance.",
          "type": "string",
          "default": "grakn"
        },
        "cpus": {
          "description": "CPU shares to allocate to the Grakn instance.",
          "type": "number",
          "default": 1.0,
          "minimum": 1.0
        },
        "mem": {
          "description": "Memory to allocate to the Grakn instance.",
          "type": "number",
          "default": 1024,
          "minimum": 1024
        },
        "disk": {
          "description": "Disk (MB) to allocate to the Grakn instance.",
          "type": "number",
          "default": 0
        },
        "constraints": {
          "description": "Marathon constraints for the framework/scheduler instance. Valid constraint operators are one of UNIQUE, CLUSTER, GROUP_BY, LIKE, UNLIKE.",
          "type": "string",
          "default": "[]"
        }
      }
    },
    "storage": {
      "type": "object",
      "description": "Storage configuration properties",
      "properties": {
        "is_local": {
          "description": "True to use local storage engine.",
          "type": "boolean",
          "default": true
        },
        "backend": {
          "description": "Storage backend type (grakn-production, grakn-production-v2)",
          "type": "string",
          "default": "grakn-production"
        },
        "hostnames": {
          "description": "Storage hostnames",
          "type": "string",
          "default": "0.0.0.0"
        }
      }
    },
    "index": {
      "type": "object",
      "description": "Elastic configuration properties",
      "properties": {
        "search_backend": {
          "description": "Search backend.",
          "type": "string",
          "default": "elasticsearch"
        },
        "search_hostname": {
          "description": "Search hostname",
          "type": "string",
          "default": "0.0.0.0"
        }
      }
    },
    "redis": {
      "type": "object",
      "description": "Redis configuration properties",
      "properties": {
        "is_local": {
          "description": "True to use local queue engine.",
          "type": "boolean",
          "default": true
        },
        "hostname": {
          "description": "Redis hostname",
          "type": "string",
          "default": "0.0.0.0:6379"
        }
      }
    },
    "spark": {
      "type": "object",
      "description": "Spark configuration properties",
      "properties": {
        "master": {
          "description": "Spark master",
          "type": "string",
          "default": "local[*]"
        }
      }
    }
  }
}
