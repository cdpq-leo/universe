{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "Name of this service instance",
          "type": "string",
          "default": "neo4j/replica"
        }
      }
    },
    "neo4j-replica": {
      "description": "Neo4j specific configuration properties",
      "type": "object",
      "properties": {
        "auth-username": {
          "description": "Username for authentication",
          "type": "string",
          "default": "neo4j"
        },
        "auth-password": {
          "description": "Password for authentication",
          "type": "string",
          "default": "dcos"
        },
        "cpus": {
          "description": "CPU shares allocated to one neo4j read replica instance.",
          "type": "number",
          "default": 2.0,
          "minimum": 1.0
        },
        "mem": {
          "description": "Memory [mb] allocated to one neo4j read replica instance.",
          "type": "number",
          "default": 4000.0,
          "minimum": 1000.0
        },
        "disk": {
          "description": "Disk size [mb] allocated to one neo4j read replica instance.",
          "type": "number",
          "default": 8000.0,
          "minimum": 4000.0
        },
        "instances": {
          "description": "Amount of neo4j read replica instances.",
          "type": "number",
          "default": 2,
          "minimum": 0
        },
        "network-name": {
          "description": "The name of your existing DC/OS overlay network.",
          "type": "string",
          "default": "dcos"
        },
        "constraints": {
          "description": "Marathon constraints for the framework/scheduler instance. Valid constraint operators are one of UNIQUE, CLUSTER, GROUP_BY, LIKE, UNLIKE.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string"
              },
              "operator": {
                "type": "string",
                "enum": ["UNIQUE", "CLUSTER", "GROUP_BY", "LIKE", "UNLIKE"]
              },
              "value": {
                "type": "string"
              },
              "last": {
                "type": "boolean",
                "default": false
              }
            }
          },
          "default": []
        }
      },
      "required": [
        "auth-username",
        "auth-password",
        "cpus",
        "mem",
        "disk",
        "instances",
        "network-name"
      ]
    }
  },
  "required": [
    "neo4j-replica"
  ]
}
