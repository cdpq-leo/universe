{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "Name of this service instance",
          "type": "string",
          "default": "neo4j/proxy"
        }
      }
    },
    "neo4j-proxy": {
      "description": "Neo4j specific configuration properties",
      "type": "object",
      "properties": {
        "auth-username": {
          "description": "Username for authentication",
          "type": "string",
          "default": "neo4j"
        },
        "auth-password": {
          "description": "Password for authentication",
          "type": "string",
          "default": "dcos"
        },
        "constraints": {
          "description": "Marathon constraints for the framework/scheduler instance. Valid constraint operators are one of UNIQUE, CLUSTER, GROUP_BY, LIKE, UNLIKE.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string"
              },
              "operator": {
                "type": "string",
                "enum": ["UNIQUE", "CLUSTER", "GROUP_BY", "LIKE", "UNLIKE"]
              },
              "value": {
                "type": "string"
              },
              "last": {
                "type": "boolean",
                "default": false
              }
            }
          },
          "default": []
        }
      },
      "required": [
        "auth-username",
        "auth-password"
      ]
    }
  },
  "required": [
    "neo4j-proxy"
  ]
}
