{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "Name of this service instance",
          "type": "string",
          "default": "neo4j/proxy"
        }
      }
    },
    "neo4j-proxy": {
      "description": "Neo4j specific configuration properties",
      "type": "object",
      "properties": {
        "auth-username": {
          "description": "Username for authentication",
          "type": "string",
          "default": "neo4j"
        },
        "auth-password": {
          "description": "Password for authentication",
          "type": "string",
          "default": "dcos"
        }
      },
      "required": [
        "auth-username",
        "auth-password"
      ]
    }
  },
  "required": [
    "neo4j-proxy"
  ]
}
