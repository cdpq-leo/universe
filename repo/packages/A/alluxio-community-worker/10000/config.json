{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "Alluxio service configuration properties.",
      "properties": {
        "name": {
          "description": "Name of the service instance. If deploying multiple Alluxio clusters, each instance must have a unique service name.",
          "type": "string",
          "default": "alluxio-worker"
        },
        "cpus": {
          "description": "CPU shares to allocate to the Alluxio instance.",
          "type": "number",
          "default": 1
        },
        "mem": {
          "description": "Memory to allocate to the Alluxio instance.",
          "type": "number",
          "default": 4096
        },
        "disk": {
          "description": "Disk (MB) to allocate to the Alluxio instance.",
          "type": "number",
          "default": 16384
        },
        "instances": {
          "description": "Number of worker instances.",
          "type": "number",
          "default": 1,
          "minimum": 1
        },
        "docker-image": {
          "description": "Docker image of the alluxio worker",
          "type": "string",
          "default": "cdpqleo/alluxio:worker-1.8.1"
        }
      }
    },
    "alluxio": {
      "type": "object",
      "description": "Alluxio parameters",
      "properties": {
        "underfs-address": {
          "description": "address for understorage filesystem",
          "type": "string",
          "default": "hdfs://hdfs/"
        },
        "master-hostname": {
          "description": "alluxio master hostname",
          "type": "string",
          "default": "alluxio-master.alluxio.marathon.mesos"
        },
        "underfs-hdfs-configuration": {
          "description": "location of hdfs configuration files",
          "type": "string",
          "default": "/opt/alluxio/conf/core-site.xml:/opt/alluxio/conf/hdfs-site.xml"
        },
        "worker-port": {
          "description": "worker port",
          "type": "number",
          "default": 10105
        },
        "worker-data-port": {
          "description": "worker data port",
          "type": "number",
          "default": 10103
        },
        "tier-levels": {
          "description": "The number of storage tiers on the worker",
          "type": "number",
          "default": 2
        },
        "tier0-quota": {
          "description": "Quota (GB) for the tier 0 storage",
          "type": "number",
          "default": 7
        },
        "tier0-dirs-path": {
          "description": "The path of storage directory for the top storage tier",
          "type": "string",
          "default": "/opt/ramdisk"
        },
        "tier0-watermark-high-ratio": {
          "description": "The high watermark of the space in the top storage tier (a value between 0 and 1)",
          "type": "number",
          "default": 0.9,
          "maximum": 1,
          "minimum": 0
        },
        "tier0-watermark-low-ratio": {
          "description": "The low watermark of the space in the top storage tier (a value between 0 and 1)",
          "type": "number",
          "default": 0.7,
          "maximum": 1,
          "minimum": 0
        },
        "tier1-alias": {
          "description": "alias for the tier 1 storage",
          "type": "string",
          "default": "HDD",
          "enum": ["HDD", "SSD"]
        },
        "tier1-quota": {
          "description": "Quota (GB) for the tier 1 storage",
          "type": "number",
          "default": 59
        },
        "tier1-dirs-path": {
          "description": "The path of storage directory for the second storage tier",
          "type": "string",
          "default": "/opt/drive"
        },
        "tier1-watermark-high-ratio": {
          "description": "The high watermark of the space in the second storage tier (a value between 0 and 1)",
          "type": "number",
          "default": 0.9,
          "maximum": 1,
          "minimum": 0
        },
        "tier1-watermark-low-ratio": {
          "description": "The low watermark of the space in the second storage tier (a value between 0 and 1)",
          "type": "number",
          "default": 0.7,
          "maximum": 1,
          "minimum": 0
        },
        "tier2": {
          "description": "Indicate whether a third storage tier is used",
          "type": "boolean",
          "default": false
        },
        "tier2-alias": {
          "description": "alias for the tier 2 storage",
          "type": "string",
          "default": "HDD",
          "enum": ["HDD", "SSD"]
        },
        "tier2-quota": {
          "description": "Quota (GB) for the tier 2 storage",
          "type": "number",
          "default": 59
        },
        "tier2-dirs-path": {
          "description": "The path of storage directory for the third storage tier",
          "type": "string",
          "default": "/opt/ramdisk"
        },
        "tier2-watermark-high-ratio": {
          "description": "The high watermark of the space in the third storage tier (a value between 0 and 1)",
          "type": "number",
          "default": 0.9,
          "maximum": 1,
          "minimum": 0
        },
        "tier2-watermark-low-ratio": {
          "description": "The low watermark of the space in the third storage tier (a value between 0 and 1)",
          "type": "number",
          "default": 0.7,
          "maximum": 1,
          "minimum": 0
        }
      }
    }
  }
}
