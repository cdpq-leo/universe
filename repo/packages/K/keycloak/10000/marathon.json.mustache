{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "disk": {{service.disk}},
  "instances": {{service.instances}},
  "acceptedResourceRoles": [
    "*"
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "forcePullImage": false,
      "image": "{{resource.assets.container.docker.image}}",
      "parameters": [],
      "privileged": false
    },
    "volumes": [],
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 0,
        "labels": {
          "VIP_0": "/{{service.name}}:8080"
        },
        "protocol": "tcp",
        "servicePort": 10100
      }
    ]
  },
  "env": {
       "KEYCLOAK_HOSTNAME": "{{env.KEYCLOAK_HOSTNAME}}",
       "KEYCLOAK_USER": "{{env.KEYCLOAK_USER}}",
       "KEYCLOAK_PASSWORD": "{{env.KEYCLOAK_PASSWORD}}",
       "DB_VENDOR": "{{env.DB_VENDOR}}",
       "DB_ADDR": "{{env.DB_ADDR}}",
       "DB_PORT": "{{env.DB_PORT}}",
       "DB_NAME": "{{env.DB_NAME}}",
       "DB_USER": "{{env.DB_USER}}",
       "DB_PASSWORD": "{{env.DB_PASSWORD}}"

  },
  "labels": {
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_PORT_INDEX": "0",
    {{#networking.external_access.enabled}}
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "true",
    "HAPROXY_0_VHOST": "{{networking.external_access.external_public_agent_hostname}}",
    "HAPROXY_0_PATH": "/{{service.name}}",
    {{/networking.external_access.enabled}}
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "portDefinitions": []
}