{
  "id": "{{service.name}}",
  "instances": {{service.instances}},
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "forcePullImage": true,
      "image": "{{resource.assets.container.docker.image}}",
      "parameters": [],
      "privileged": false
    },
    "portMappings": [
      {
        "containerPort": {{networking.service_endpoints.container_port}},
        "hostPort": {{networking.service_endpoints.host_port}},
        "protocol": "{{networking.service_endpoints.protocol}}"
      }
    ]
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [
    {
      "portIndex": 0,
      "protocol": "{{health_checks.IP_protocol.protocol}}",
      {{^networking.marathon_lb_proxy.vhost}}
      "path": "{{health_checks.IP_protocol.path}}"
      {{/networking.marathon_lb_proxy.vhost}}
      {{#networking.marathon_lb_proxy.vhost}}
      "path": "{{networking.marathon_lb_proxy.path}}"
      {{/networking.marathon_lb_proxy.vhost}}
    }
  ],
  "labels": {
    {{#networking.marathon_lb_proxy.vhost}}
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "true",
    "HAPROXY_0_VHOST": "{{networking.marathon_lb_proxy.vhost}}",
    "HAPROXY_0_PATH": "{{networking.marathon_lb_proxy.path}}",
    {{/networking.marathon_lb_proxy.vhost}}
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "env": {
    {{#placement.region}}
    "SERVICE_REGION": "{{placement.region}}",
    {{/placement.region}}
    {{#environment.kafka_manager_username}}
    "KM_USERNAME": {"secret": "kafkamanagerusername"},
    "KM_PASSWORD ": {"secret": "kafkamanagerpassword"},
    {{/environment.kafka_manager_username}}
    "ZK_HOSTS": "{{environment.zk_hosts}}",
    {{^networking.marathon_lb_proxy.vhost}}
    {{^networking.marathon_lb_proxy.path}}
    "PLAY_HTTP_CONTEXT": "{{environment.play_http_context}}",
    {{/networking.marathon_lb_proxy.path}}
    {{/networking.marathon_lb_proxy.vhost}}
    {{#networking.marathon_lb_proxy.vhost}}
    {{#networking.marathon_lb_proxy.path}}
    "PLAY_HTTP_CONTEXT": "{{networking.marathon_lb_proxy.path}}",
    {{/networking.marathon_lb_proxy.path}}
    {{/networking.marathon_lb_proxy.vhost}}
    "BASE_ZK_PATH": "{{environment.base_zk_path}}",
    "APPLICATION_SECRET": "{{environment.application_secret}}"
  },
  "secrets": {
    {{#environment.kafka_manager_username}}
    "kafkamanagerusername": {
      "source": "{{environment.kafka_manager_username}}"
    },
    {{/environment.kafka_manager_username}}
    {{#environment.kafka_manager_password}}
    "kafkamanagerpassword": {
      "source": "{{environment.kafka_manager_password}}"
    }
    {{/environment.kafka_manager_password}}
  },
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 1
  }
}